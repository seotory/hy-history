{
    "compilerOptions": {
      "target": "ES2017",
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      // "noEmit": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "removeComments": true,  
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "traceResolution": true,
      "typeRoots": [
        "typings",
        "./node_modules/@types"
      ],
      "lib": [
        "dom",
        "es2015",
        "esnext.asynciterable",  // async + geneter.
      ],
      // 어노테이션
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": [
      "./src",
      "./test"
    ],
    "exclude": [
      "node_modules"
    ]
  }